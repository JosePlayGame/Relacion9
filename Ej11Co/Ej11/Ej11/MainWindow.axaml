<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="200" d:DesignHeight="200"
        x:Class="Ej11.MainWindow"
        RequestedThemeVariant="Light"
        CanResize="False"
        Width="200"
        Height="200"
        SizeToContent="WidthAndHeight"
        Title="Ej11">
        <StackPanel Name="Stp">
                <StackPanel Orientation="Horizontal" Margin="20" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Button Click="Button_OnClick" Content="Generar matriz de:" Margin="20,20,0,0"/>
                        <TextBlock Text="Filas:" FontWeight="Black" Margin="30,30,0,0"/>
                        <ComboBox Name="CbPadre" SelectedIndex="0" SelectedItem="2"  Margin="0,20,0,0"/>
                        <TextBlock Text="Columnas:" FontWeight="Black" Margin="30,30,0,0"/>
                        <ComboBox Name="CbPadre2" SelectedIndex="0" SelectedItem="2" Margin="0,20,0,0"/>
                </StackPanel>
                <StackPanel Margin="20,40,20,20">
                        <Grid Name="GrMatriz"/>
                </StackPanel>
        </StackPanel>
</Window>
